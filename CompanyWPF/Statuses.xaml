<Window x:Class="CompanyWPF.Statuses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComboBoxEditableSample" Height="165.8" Width="222.8">
    
    <StackPanel Margin="10">
        <Label Content="Select Status:"></Label>
        <ComboBox IsEditable="False" RenderTransformOrigin="0.51,1.545" HorizontalAlignment="Left" Width="196">
            <ComboBoxItem Content="canceled"/>
            <ComboBoxItem Content="ordered"/>
            <ComboBoxItem Content="paid-up"/>
            <ComboBoxItem Content="inProgress"/>
            <ComboBoxItem Content="awCustConf"/>
            <ComboBoxItem Content="delivered"/>
        </ComboBox>
        <Button x:Name="btnOK" 
                Content="OK" 
                Height="30" 
                HorizontalAlignment="Left" 
                Width="196" 
                Padding="1" 
                Margin="0,40,0,0"
                Click="btnOK_Click"/>
    </StackPanel>
</Window>
